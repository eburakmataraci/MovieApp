<configuration>

    <!-- Konsola log yazdıran appender -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log seviyesini INFO olarak ayarlıyoruz -->
    <root level="info">
        <appender-ref ref="console" />
    </root>

</configuration>
